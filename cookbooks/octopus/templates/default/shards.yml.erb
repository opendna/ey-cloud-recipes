octopus:
  replicated: true
  environments:
    - production
  production:
<% @slaves.each_with_index do |slave,i| %>
    <%= slave['name'] %>:
      adapter: <%= @adapter %>
      database: '<%= @database %>'
      username: '<%= @username %>'
      password: '<%= @password %>'
      host:     '<%= slave['private_hostname'] %>'
      reconnect: true
<% end %>