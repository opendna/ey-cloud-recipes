octopus:
  replicated: true
  environments:
    - production
  production:
  <% @slaves.each_with_index do |slave,i| %>
    <%= i == 0 ? "slave" : "slave_#{i}" %>:
      adapter: <%= @adapter %>
      database: '<%= @dbname %>'
      username: '<%= @dbuser %>'
      password: '<%= @dbpass %>'
      host:     '<%= slave['private_hostname'] %>'
      reconnect: true
  <% end %>